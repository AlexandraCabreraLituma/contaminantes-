            "type": "string"
          },
          "valor": {
            "type": "integer",
            "format": "int32"
          }
        },
        "example": {
          "ObservationsSearch": {
            "timeStamp": {
              "date": "2018-05-17 10:11:00.000000",
              "timezone_type": 1,
              "timezone": "-05:00"
            },
            "phenomenonId": "urn:ogc:def:phenomenon:OGC:1.0.30:O3",
            "valor": 18.7594803046
          }
        }
      },
